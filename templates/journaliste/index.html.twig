{% extends 'base.html.twig' %}

{% block title %}Journaliste index{% endblock %}

{% block body %}
    <h1>Journaliste index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>DateNaiss</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for journaliste in journalistes %}
            <tr>
                <td>{{ journaliste.id }}</td>
                <td>{{ journaliste.nom }}</td>
                <td>{{ journaliste.dateNaiss ? journaliste.dateNaiss|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('journaliste_show', {'id': journaliste.id}) }}">show</a>
                    <a href="{{ path('journaliste_edit', {'id': journaliste.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('journaliste_new') }}">Create new</a>
